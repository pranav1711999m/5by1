{
    "root": false,
    "extends": [
        "plugin:angular/johnpapa" // Uses the recommended rules from @eslint-plugin-angular
    ],
    "plugins": [
        "angular"
    ],
    "rules": {
        "new-cap": ["error", { "newIsCap": true, "capIsNewExceptionPattern" : "Injectable|Component|NgModule|ViewChild|Inject|Input|Output|Directive"}],
        "max-params": ["error", 7]
    }
}